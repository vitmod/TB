<?xml version="1.0" encoding="utf-8" ?>
<settings>

  <section id="player">
    <category id="videoplayer">
      <group id="2">
        <setting id="videoplayer.adjustrefreshrate">
          <default>2</default> <!-- ADJUST_REFRESHRATE_ON_STARTSTOP -->
        </setting>
      </group>
      <group id="4">
        <setting id="videoplayer.useamcodecmpeg2">
          <default>800</default>
        </setting>
        <setting id="videoplayer.useamcodecmpeg4">
          <default>9999</default>
        </setting>
      </group>
    </category>
  </section>

  <section id="pvr">
    <category id="pvrmanager">
      <group id="2">
        <setting id="pvrmanager.syncchannelgroups">
          <default>false</default>
        </setting>
      </group>
    </category>
    <category id="epg">
      <group id="2">
        <setting id="epg.preventupdateswhileplayingtv">
          <default>true</default>
        </setting>
        <setting id="epg.ignoredbforclient">
          <default>true</default>
        </setting>
      </group>
    </category>
    <category id="pvrplayback">
      <group id="1">
        <setting id="pvrplayback.signalquality">
          <default>false</default>
        </setting>
      </group>
    </category>
  </section>

  <section id="services">
    <category id="webserver">
      <group id="1">
        <setting id="services.webserver">
          <default>false</default>
        </setting>
        <setting id="services.webserverpassword">
          <default>tashakbate</default>
        </setting>
      </group>
    </category>
  </section>

  <section id="system">
    <category id="display">
      <group id="1">
        <setting id="videoscreen.screen">
          <visible>false</visible>
        </setting>
      </group>
    </category>
    <category id="audio">
      <group id="1">
        <setting id="audiooutput.volumesteps">
          <default>20</default>
        </setting>
      </group>
      <group id="2">
        <setting id="audiooutput.dspaddonsenabled">
          <visible>false</visible>
          <default>false</default>
        </setting>
      </group>
    </category>
    <category id="logging">
      <group id="1">
        <setting id="debug.screenshotpath">
          <default>/storage/screenshots/</default>
        </setting>
      </group>
      <group id="2">
        <setting id="eventlog.enabled">
          <default>false</default>
        </setting>
      </group>
    </category>
  </section>

  <section id="interface">
    <category id="skin">
      <group id="1">
        <setting id="lookandfeel.soundskin">
          <default></default>
        </setting>
      </group>
    </category>
    <category id="control">
      <group id="2">
        <setting id="input.enablemouse">
          <default>false</default>
        </setting>
      </group>
    </category>
    <category id="other">
      <group id="2">
        <setting id="lookandfeel.enablerssfeeds">
          <default>false</default>
        </setting>
      </group>
    </category>
  </section>

</settings>
