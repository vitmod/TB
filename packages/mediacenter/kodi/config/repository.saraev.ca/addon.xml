<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.saraev.ca"
		name="@DISTRONAME@ Add-on Repository"
		version="@OS_VERSION@"
		provider-name="@DISTRONAME@">
	<requires>
		<import addon="xbmc.addon" version="12.0.0"/>
	</requires>
	<extension point="xbmc.addon.repository"
		name="@DISTRONAME@ Add-on Repository">
		<info>@ADDON_URL@/addons.xml</info>
		<checksum>@ADDON_URL@/addons.xml.md5</checksum>
		<datadir zip="true">@ADDON_URL@</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>@DISTRONAME@ Add-ons</summary>
		<description>Download and install add-ons from @DISTRONAME@ add-on repository</description>
		<platform>all</platform>
	</extension>
</addon>
